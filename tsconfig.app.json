{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    // Laisse TypeScript ignorer les types externes
    "skipLibCheck": true,
    "allowImportingTsExtensions" : true,

    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",

    // Désactive provisoirement
    "isolatedModules": false,
    "moduleDetection": "force",

    // Pour être sûr que TS charge bien les types
    "types": [
      "react",
      "react-dom",
      "@react-three/fiber",
      "@types/three"
    ]
  },
  "include": ["src/**/*", "src/global.d.ts"]
}